<div class="gallery">
  {% for post in postslist %}


  <div class="gallery__item">
        <a href="{{ post.url | url }}">
          <img class="thumb" src="{{ post.data.featuredImage }}" alt="{{ post.data.featuredImage }}" />
        </a>

        <small>
          {% for tag in post.data.tags %}
            <a href="/tags/{{tag}}">{{tag}}</a>
          {% endfor %}
        </small>
      </div>

   
  {% endfor %}
</div>
